<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FDB581"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="131dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        app:srcCompat="@mipmap/pizza1" />

    <TextView
        android:id="@+id/nomPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="#100F0F" />

    <TextView
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomPizza"
        android:layout_alignBottom="@+id/photo"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textColor="#100F0F" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="17dp"
        app:srcCompat="@mipmap/sharee" />

    <TextView
        android:id="@+id/idf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temps"
        android:layout_alignStart="@+id/nomPizza"
        android:layout_marginStart="-143dp"
        android:layout_marginBottom="101dp"
        android:text="TextView"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_below="@+id/nomPizza"
        android:layout_alignStart="@+id/nomPizza"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/flag" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_below="@+id/nomPizza"
        android:layout_alignStart="@+id/nomPizza"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="68dp"
        app:srcCompat="@mipmap/clock1" />

    <TextView
        android:id="@+id/nbIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"
        android:text="TextView"
        android:textColor="#100F0F" />


</RelativeLayout>